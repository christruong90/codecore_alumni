<%= simple_form_for @profile do |f| %>
  <%= f.input :tagline, label: "Headline" %>
  <%= f.input :description %>
  <%= f.input :availability %>
  <%= f.input :linkedin_url, label: fa_icon("linkedin"), label_html: {class: "form-link-icon"} %>
  <%= f.input :twitter_url, label: fa_icon("twitter"), label_html: {class: "form-link-icon"} %>
  <%= f.input :github_url, label: fa_icon("github"), label_html: {class: "form-link-icon"} %>
  <%= f.input :photo, as: :file, multiple: true, hint: 'JPG, JPEG, GIF, PNG' %>
  <%= f.input :resume, as: :file, hint: 'PDF, DOC, TXT, HTML, ODF' %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
