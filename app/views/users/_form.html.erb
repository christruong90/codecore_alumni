<%= simple_form_for @user do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email  %>
  <% if !user_signed_in? %>
  <%= f.input :password  %>
  <%= f.input :password_confirmation  %>
  <% end %>
  <%= f.button :submit, class: "btn btn-primary"  %>
  <%= link_to "Change Password", edit_password_path(current_user) if user_signed_in? %>
<% end %>
