<div id="skill_categories" class="col-sm-6">
  <h2>Skill Categories</h2>
  <div class="container-fluid">
    <% @categories.each do |category|%>
      <div id="<%= dom_id(category) %>" class="row">
        <div class="col-sm-6">
          <p><%#= link_to category.name, category_path(category) %>
            <%= best_in_place category, :name, type: :input, :ok_button => "Save", :cancel_button => "Cancel", :activator => "#activator-#{category.id}"%>
          </p>
        </div>
        <div class="col-sm-6 text-right">
          <%= button_tag "Edit",  :id=>"activator-#{category.id}", :class=>"btn btn-primary" %>
          <%= link_to "Delete",
                      category_path(category),
                      method: :delete,
                      data: { confirm: "Are you sure you want to delete this category?" }, :class=>"btn btn-primary", :role=>"button" %>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
</div>

<div id="new_category" class="col-sm-6">
  <h2>New Category</h2>
  <div class="container-fluid">
    <%= render "form"%>
  </div>
</div>
