<% if @experience %>
<ul>
  <% @experience.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= simple_form_for [@profile, @experience], html: {multiple: true} do |f| %>
  <%= f.input :job_title %>
  <%= f.input :company_name %>
  <%= f.input :company_url %>
  <%= f.input :description, as: :text %>
  <%= f.input :from_date, as: :date,
                            start_year: Date.today.year - 30 %>
  <%= f.input :to_date, as: :date,
                          start_year: Date.today.year - 30 %>
  <%= f.input :image, as: :file %>
  <div>
    <small>JPG, JPEG, GIF, PNG only.</small>
  </div><br />
  <%= f.submit class: "btn btn-primary" %>
<% end %>
